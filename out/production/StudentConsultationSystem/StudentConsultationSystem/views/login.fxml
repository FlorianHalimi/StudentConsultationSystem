                        <ImageView fitHeight="27.0" fitWidth="31.0" layoutX="6.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/images/door-key.png" />
                     </image></ImageView>
                    </children>
